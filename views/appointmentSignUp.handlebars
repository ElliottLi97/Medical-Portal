<div class="container">
    <h2 class="title mt-5">Select an Appointment Data and Doctor</h2><hr>
    <div class="row">
        <div class="col-md-6 offset-md-3"> 
            <div class="card my-5">
                <form id="add-appointment-form" class="card-body cardbody-color p-lg-5">
                    <div class="text-center">
                        <img src="/image/appointments.png"class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="150px" alt="profile">
                    </div>
                    <div class="mb-3">
                    <input type="datetime-local" class="form-control" id="datetime">
                    </div>
                    <div class="mb-3">
                        <label for="doctor">Choose a doctor: {{name}}</label>
                        <select id="doctor_id" name="doctor">
                            {{#each doctors as |doctor|}}
                                <option value="{{doctor.id}}">{{doctor.name}}</option>
                            {{/each}}  
                        </select>
                        <input type="text" class="form-control" id="concern" placeholder="Reason for visit">
                    </div>
                    <div class="btn-group">
                        <button type="submit" class="btn btn-color px-5 mb-5 w-100">Make appointment</button>
                        <button type="cancel" class="btn btn-color px-5 mb-5 w-100" onclick="window.location='/';return false;">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/appointment.js"></script>